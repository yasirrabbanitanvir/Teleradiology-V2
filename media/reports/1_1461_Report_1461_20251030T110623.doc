    .sig-name { font-weight: bold; font-size: 18px; color: #000000; }
    .sig-img { margin-bottom: 4px; }
    p { margin: 5px 0; color: #000000; }
    strong { font-weight: bold; color: #000000; }
    ul, ol { margin: 5px 0; padding-left: 25px; }
    img { display: block; }
